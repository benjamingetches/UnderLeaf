            border-bottom: 1px solid #eee;
        }
        .public-community-card:last-child {
            border-bottom: none;
        }
        .public-community-title {
            font-size: 1.1em;
            font-weight: bold;
        }
        .public-community-description {
            color: #666;
            margin: 5px 0;
        }
        .public-community-join {
            background-color: #008CBA;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
