<div class="community-profile">
    <style>
        /* Styling for the profile layout */
        .community-profile {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            font-family: Arial, sans-serif;
        }

        .community-header {
            display: flex;
            align-items: flex-start;
            width: 100%;
            max-width: 600px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

        .community-logo .logo-img {
            width: 80px;
            height: 80px;
            border-radius: 8px;
            margin-right: 20px;
        }

        .community-details h2 {
            font-size: 24px;
            font-weight: bold;
            margin: 0;
        }

        .community-details p {
            font-size: 16px;
            color: #555;
            margin-top: 5px;
        }

        .community-actions {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }

        .community-actions .btn {
            padding: 10px 20px;
            background-color: #0073b1;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
        }

        .community-actions .btn:hover {
            background-color: #005f8d;
        }

        /* Modal styling */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fff;
            padding: 20px;
            width: 80%;
            max-width: 500px;
            border-radius: 8px;
            position: relative;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .modal-header h3 {
            margin: 0;
        }

        .modal-close {
            cursor: pointer;
            font-size: 20px;
            font-weight: bold;
        }

        .member-search {
            margin-top: 10px;
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .member-list {
            margin-top: 10px;
            max-height: 200px;
            overflow-y: auto;
        }

        .member-item {
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

        /* Chat styling */
        .chat-box {
            margin-top: 20px;
            width: 100%;
            max-width: 600px;
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 8px;
        }

        .chat-messages {
            max-height: 300px;
            overflow-y: auto;
            margin-bottom: 10px;
        }

        .chat-message {
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

        .chat-form {
            display: flex;
            gap: 10px;
        }

        .chat-form input {
            flex: 1;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .chat-form button {
            padding: 8px 20px;
            background-color: #0073b1;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>

    <!-- Community Header Section -->
    <div class="community-header">
        <div class="community-logo">
            <img src="{{community.community_picture_url}}" alt="Community Logo" class="logo-img">
        </div>
        <div class="community-details">
            <h2>{{community.name}}</h2>
            <p>{{community.description}}</p>
        </div>
    </div>

    <!-- Community Actions -->
    <div class="community-actions">
        <a href="/community/{{community.community_id}}/notes" class="btn">View Community Notes</a>
        <button class="btn" onclick="openMembersModal()">See Members</button>
        <button class="btn" onclick="openChat()">Community Chat</button>
    </div>

    <!-- Members Modal -->
    <div id="membersModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Community Members</h3>
                <span class="modal-close" onclick="closeMembersModal()">&times;</span>
            </div>
            <input type="text" class="member-search" placeholder="Search members..." onkeyup="searchMembers(this.value)">
            <div class="member-list" id="memberList"></div>
        </div>
    </div>

    <!-- Community Chat Box -->
    <div id="chatBox" class="chat-box" style="display: none;">
        <div class="chat-messages" id="chatMessages">
            {{#each messages}}
                <div class="chat-message">
                    <strong>{{this.username}}</strong>: {{this.content}}
                </div>
            {{/each}}
        </div>
        <form class="chat-form" onsubmit="postMessage(event)">
            <input type="text" id="messageInput" placeholder="Type a message...">
            <button type="submit">Send</button>
        </form>
    </div>
</div>

<script>
    // Open Members Modal
    function openMembersModal() {
        fetch(`/community/{{community.community_id}}/members`)
            .then(response => response.json())
            .then(members => {
                const memberList = document.getElementById("memberList");
                memberList.innerHTML = '';
                members.forEach(member => {
                    const memberItem = document.createElement("div");
                    memberItem.classList.add("member-item");
                    memberItem.textContent = member.username;
                    memberList.appendChild(memberItem);
                });
                document.getElementById("membersModal").style.display = "flex";
            })
            .catch(error => console.error("Error fetching members:", error));
    }

    // Close Members Modal
    function closeMembersModal() {
        document.getElementById("membersModal").style.display = "none";
    }

    // Search Members
    function searchMembers(query) {
        const members = document.querySelectorAll(".member-item");
        members.forEach(member => {
            if (member.textContent.toLowerCase().includes(query.toLowerCase())) {
                member.style.display = "block";
            } else {
                member.style.display = "none";
            }
        });
    }

    // Open Community Chat
    function openChat() {
        document.getElementById("chatBox").style.display = "block";
        loadMessages();
    }

    // Load Chat Messages
    function loadMessages() {
        fetch(`/community/{{community.community_id}}/chat`)
            .then(response => response.json())
            .then(messages => {
                const chatMessages = document.getElementById("chatMessages");
                chatMessages.innerHTML = '';
                messages.forEach(message => {
                    const chatMessage = document.createElement("div");
                    chatMessage.classList.add("chat-message");
                    chatMessage.innerHTML = `<strong>${message.username}</strong>: ${message.content}`;
                    chatMessages.appendChild(chatMessage);
                });
            })
            .catch(error => console.error("Error loading messages:", error));
    }

    // Post Message in Chat
    function postMessage(event) {
        event.preventDefault();
        const content = document.getElementById("messageInput").value;

        fetch(`/community/{{community.community_id}}/chat`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ content })
        })
        .then(response => {
            if (response.ok) {
                document.getElementById("messageInput").value = '';
                loadMessages();
            } else {
                console.error("Failed to post message");
            }
        })
        .catch(error => console.error("Error posting message:", error));
    }
</script>
