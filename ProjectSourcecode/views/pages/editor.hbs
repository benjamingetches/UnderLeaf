  event.preventDefault();
  const target = event.target;
  if (target.classList.contains('dropdown-item')) {
    const noteId = target.dataset.noteId;

    try {
      const response = await fetch(`/get-note/${noteId}`, {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json',
