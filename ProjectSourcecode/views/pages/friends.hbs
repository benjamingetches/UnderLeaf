<h1 class="text-center my-4">Friends</h1>

<div class="container">
  <!-- Friends Table -->
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Friend Username</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each friends}}
        <tr>
          <td>{{this.friend_username}}</td>
          <td>
            <!-- Edit Friend Button (opens a modal) -->
            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#editFriendModal{{this.id}}">
              Edit
            </button>
            
            <!-- Delete Friend Form -->
            <form action="/delete-friend/{{this.id}}" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>

        <!-- Edit Friend Modal -->
        <div class="modal fade" id="editFriendModal{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="editFriendModalLabel{{this.id}}" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="editFriendModalLabel{{this.id}}">Edit Friend</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <form action="/edit-friend/{{this.id}}" method="POST">
                <div class="modal-body">
                  <div class="form-group">
                    <label for="friendUsername{{this.id}}">Friend Username</label>
                    <input type="text" class="form-control" id="friendUsername{{this.id}}" name="friendUsername" value="{{this.friend_username}}" required>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    </tbody>
  </table>

  <!-- Add Friend Form -->
  <form action="/add-friend" method="POST" class="mt-4">
    <div class="form-group row">
      <label for="friendUsername" class="col-sm-2 col-form-label">Add Friend:</label>
      <div class="col-sm-8">
        <input type="text" class="form-control" id="friendUsername" name="friendUsername" placeholder="Enter friend's username" required>
      </div>
      <div class="col-sm-2">
        <button type="submit" class="btn btn-success">Add Friend</button>
      </div>
    </div>
  </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

